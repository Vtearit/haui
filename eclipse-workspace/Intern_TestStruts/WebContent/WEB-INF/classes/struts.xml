<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="trai" extends="struts-default">
		<action name="trainee" class="action.TraineeAction" method="getTrainee">
			<result name="success">homepage.jsp</result>
		</action>
		<action name="delete" class="action.DeleteTrainee" method="deleteTrainee">
			<result name="delete" type="redirectAction">trainee</result>
		</action>
		<action name="update" class="action.TraineeAction" method="updateTrainee">
			<result name="update" type="redirectAction">trainee</result>
			<result name="error">/update.jsp</result>
			<result name="error1">/update.jsp</result>
			<result name="input">/update.jsp</result>
		</action>
		<action name="add" class="action.TraineeAction" method="addTrainee">
			<result name="add" type="redirectAction">trainee</result>
			<result name="error">/add.jsp</result>
			<result name="input">/add.jsp</result>
		</action>
	</package>
</struts>
